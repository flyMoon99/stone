# 环境配置示例文件
# 复制此文件为 .env 并修改相应的值

# 应用环境
NODE_ENV=production

# 数据库配置
DATABASE_URL=postgresql://stone:stone123@localhost:5432/stone
TEST_DATABASE_URL=postgresql://stone:stone123@localhost:5434/stone_test

# Redis配置（可选）
REDIS_URL=redis://localhost:6379

# JWT密钥配置（生产环境请使用强密钥）
ADMIN_JWT_SECRET=your-super-secret-admin-jwt-key-change-this-in-production
MEMBER_JWT_SECRET=your-super-secret-member-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_THRESHOLD=86400

# API服务端口
API_PORT=3000

# 前端服务端口
WEB_PORT=8080
ADMIN_PORT=5174

# 日志级别
LOG_LEVEL=info

# 文件上传配置
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# 邮件配置（如果需要）
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@example.com
SMTP_PASS=your-email-password
SMTP_FROM=noreply@example.com

# 其他配置
CORS_ORIGIN=http://localhost:8080,http://localhost:5174
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
